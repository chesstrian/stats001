  <div class="container">
    <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="hero-unit">
      <h1>Estadísticas por Extensión</h1>
      <form id="filters" class="form-inline" method="post">
        <fieldset>
          <legend>Filtros</legend>
          <label>Extensión</label>
          <input id="exten" type="text" placeholder="1234" align="right">
          &nbsp;
          <label>Desde</label>
          <input type="text" id="from">
          <label>hasta</label>
          <input type="text" id="to">
        </fieldset>
        <br>
        <fieldset>
          <legend>Acciones</legend>
          <button id="show" type="button" class="btn btn-primary btn-large">Mostrar &raquo;</button>
          <button id="erase" type="reset" class="btn btn-inverse btn-large">Limpiar &raquo;</button>
        </fieldset>
      </form>
    </div>

    <div id="data">
      <table id="dataCDR" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Fuente</th>
            <th>Destino</th>
            <th>Disposición</th>
            <th>Duración (Seg)</th>
            <th>Duración (Min)</th>
          </tr>
        </thead>
