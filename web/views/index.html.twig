  <div class="container">
    <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="hero-unit">
      <h1>Estadísticas por Extensión</h1>
      <form id="filters" class="form-horizontal" method="post">
        <fieldset>
          <legend>Llamada</legend>
          <div class="row-fluid">
            <div class="span4">
              <div class="control-group">
                <label class="control-label">Extensión</label>
                <div class="controls">
                  <input id="exten" type="text" placeholder="1234" align="right">
                </div>
              </div>
            </div>
            <div class="span4">
              <div class="control-group">
                <label class="control-label">Estado</label>
                <div class="controls">
                  <select id="disposition">
                    <option value="ANSWERED">Contestada</option>
                    <option value="NO ANSWER">No Contestada</option>
                    <option value="BUSY">Ocupada</option>
                    <option value="FAILED">Fallida</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
          <legend>Fechas</legend>
          <div class="row-fluid">
            <div class="span4">
              <div class="control-group">
                <label class="control-label">Desde</label>
                <div class="controls">
                  <input type="text" id="from">
                </div>
              </div>
            </div>
            <div class="span4">
              <div class="control-group">
                <label class="control-label">hasta</label>
                <div class="controls">
                  <input type="text" id="to">
                </div>
              </div>
            </div>
          </div>
        </fieldset>
        <br>
        <fieldset>
          <legend>Acciones</legend>
          <button id="show" type="button" class="btn btn-primary btn-large">Mostrar &raquo;</button>
          <button id="erase" type="reset" class="btn btn-inverse btn-large">Limpiar &raquo;</button>
        </fieldset>
      </form>
    </div>

    <div id="data">
      <table id="dataCDR" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Fuente</th>
            <th>Destino</th>
            <th>Disposición</th>
            <th>Duración (Seg)</th>
            <th>Duración (Min)</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>

